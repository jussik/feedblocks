@import url(http://fonts.googleapis.com/css?family=Roboto:100)
@import url(http://fonts.googleapis.com/css?family=Open\+Sans:300)

@import "utils"

html
  default-font()
  color $color
  background-color $bg-color

body
  margin 10px

h1, h2, h3, h4
  font-family Roboto, sans-serif
  font-weight 100
  margin 0

h1
  font-size 500%

h2
  font-size 200%

h3
  font-size 130%

p
  margin 0

a
  link $link-color
  text-decoration none

button
  display inline
  default-font()
  margin 0
  padding 0
  background none
  border none
  cursor pointer
  link $link-color

input
  default-font()
  font-size 80%
  margin 0
  border 1px solid $border-color
  border-radius 4px
  padding 2px
  box-shadow inset 0 0 8px fade($border-color, 50%)

input:invalid
  border auto

#title
  margin -35px 0 -16px -16px
  color $title-color
  span
    color fade(@color, 50%)
