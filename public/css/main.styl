@import "utils"

.middle > *
  vertical-align middle

.error
  color $error-color

.remove
  link $remove-color

.popular
  margin-left 10px

.feed
  margin 10px

.itemLink
  margin-left 5px

transform()
  -webkit-transform arguments
  -moz-transform arguments
  -ms-transform arguments
  transform arguments

.triangle
  cursor pointer
  color $title-color
  transition -webkit-transform 0.1s, color 0.2s
  display inline-block
  width 18px
  height 18px
  position relative
  border-radius 50%
  &:after
    position absolute
    top -3px
    left 1px
    font-size 16px
    content "\25B2"
  &.right
    transform rotate(90deg)
  &.down
    transform rotate(180deg)
  &.left
    transform rotate(-90deg)
  &:hover
    color darken(@color, 25%)
